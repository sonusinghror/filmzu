<div class="login-form-box">
   <%= form_tag admin_sessions_path, :class=>"form-horizontal" do %>
    <div class="col-sm-5 col-sm-offset-3">
      <h2> Sign in</h2>
      <div class="form-group">
        <%= label_tag :email, t(".email"), :class=> "sr-only" %>
        <%= text_field_tag :email, params[:email], :class=>"form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :email, t(".email"), :class=> "sr-only" %>
        <%= password_field_tag :password, params[:password], :class=>"form-control" %>
      </div>
      <div class="form-group ">
        <%= submit_tag t(".button"), :class => "btn btn-lg btn-primary" %>
      </div>
    </div>
  <% end %>
</div>