<!DOCTYPE html>
<html>
<head>
  <title>Filmzu Blog</title>
  <%= stylesheet_link_tag    "monologue/admin/application" %>
  <%= javascript_include_tag "monologue/admin/application" %>
  <%= javascript_include_tag "jquery.min" %>
  <%= javascript_include_tag "bootstrap.min" %>
  <%= javascript_include_tag "https://cdn.ckeditor.com/4.5.7/standard/ckeditor.js" %>
  <%= stylesheet_link_tag "monologue/admin_blog_style" %>
  <%= stylesheet_link_tag "bootstrap.min" %>
  <%= csrf_meta_tags %>
</head>
<body class="admin-blog-body">

  <header id="hpart">
     <div class="container clearfix">
        <div class="row">
          <div class="">
            <%= link_to Monologue.site_url , :class=>"logo fl" do %>
              <img src="/assets/logo.png" alt="Logo">
            <% end %>
            <div class="space-box fl"></div>
            <button data-target=".navbar-collapse" data-toggle="collapse" type="button" class="navbar-toggle collapsed">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            </button>
          </div>
          <% if current_user%>
            <div class="navbar-collapse collapse" style="height: 1px;">
              <div class="admin-atext">
                <ul class="navnbar fl">
                  <li><%= link_to "Add New Blog", new_admin_post_path%></li>
                  <li><%= link_to "List of blogs", admin_posts_path %></li>
                  <li><%= link_to t(".comments"), admin_comments_path %></li>
                </ul>
              </div>
              <div title="Log Out" class="action-div fr blog-logout">
                <%= link_to admin_logout_path, :class=>"btn orange-btn h-orange-btn" do %>
                  <i class="fa fa-sign-out"></i> Log Out
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
     </div>
  </header> 
  <% if current_user %>
    <%#= render "layouts/monologue/admin/nav_bar" %>
  <% end %>
  <div class="container">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}", :class => (name == :notice ? "alert alert-info" : "alert alert-error") %>
    <% end %>

    <%= yield %>
  </div>
  <div class="clearfix"></div>
  <footer class="text-center">
     <div class="login-footer">
        <div class="container">
           <div class="marketplace-vid">
              <div class="col-xs-12">
                 <img src="/assets/blog/footer-logo.png">
              </div>
              <div class="clearfix"></div>
              <div class="col-xs-12 footer-copyear">&copy; 2013&ndash;2016 Filmzu Blog | 
                 <a href="http://www.filmzu.com/" target="_blank">Your vision, your video marketplace.</a>
              </div>
              <div class="clearfix"></div>
           </div>
        </div>
     </div>
  </footer>
</body>
</html>
<style>
 .admin-blog-body .navbar-inner{
    background-color:#e75151;
    background-image:none;
 }
 .admin-blog-body .navbar .nav > li > a{
   color: #fff;
 }
</style>