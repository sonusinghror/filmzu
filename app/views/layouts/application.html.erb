<style>
			#wraper{
				position:relative;
			}
			#slider{
				opacity:0;
				height:0;
				width:0;
			}
			#sliderElements{
				position: relative;
			}
			#slideImgs{
				position:absolute;
				width: 73.2%;
				top: 16%;
				z-index: 2;
				left: 13.3%;
			}
			.posSbs{
				position:absolute;
				left:0;
			}
			.frameWindow{
				position: relative;
				z-index: 3;
			}
		</style>
<!--[if lte IE 8]><link rel="stylesheet" href="css/ie/v8.css" /><![endif]-->

</head>
<body>

<div id="wraper">
	<%= render 'header' %>
	<% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %>" role="alert">
				<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <%= value %>
        </div>
  <% end %>
	<div id="emberapp"></div>
	<%= yield %>
	<%= render 'footer' %>
</div>

</body>
<%= google_analytics_js 'UA-38653918-1' %>
